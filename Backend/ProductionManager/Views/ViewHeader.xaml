<UserControl x:Class="Solarponics.ProductionManager.Views.ViewHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Solarponics.ProductionManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <TextBlock Foreground="White" FontSize="42" FontWeight="SemiBold" HorizontalAlignment="Center" Text="{Binding Path=Category, RelativeSource={RelativeSource AncestorType=views:ViewHeader}, FallbackValue=Category}" />
        <TextBlock Foreground="White" FontSize="42" FontWeight="SemiBold" HorizontalAlignment="Center" Text=" &gt; " />
        <TextBlock Foreground="White" FontSize="42" FontWeight="SemiBold" HorizontalAlignment="Center" Text="{Binding Path=Title, RelativeSource={RelativeSource AncestorType=views:ViewHeader}, FallbackValue=Title}" />
    </StackPanel>
</UserControl>